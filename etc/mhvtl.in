add_drive $1 $2 $3 $4 "IBM" "ULT3580-TD2" "550V" $5 $6 $7 44
echo " READ_ONLY: LTO_1" >> $DEVICE_CONF
echo " READ_WRITE: LTO_2" >> $DEVICE_CONF
echo "" >> $DEVICE_CONF
